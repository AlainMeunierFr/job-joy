{
  "name": "job-joy",
  "version": "1.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "build": "tsc && node dist/scripts/write-build-info.js && node dist/scripts/copy-css.js && node dist/scripts/build-plugins-json.js",
    "build:dev": "tsc",
    "start": "node dist/app/server.js",
    "dev": "npm run build:dev && node dist/app/server.js",
    "build:electron": "npm run build && electron-builder",
    "release:test-build": "npm run build && powershell -NoProfile -ExecutionPolicy Bypass -File scripts/test-electron-build.ps1",
    "start:electron": "npm run build:dev && electron .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:report": "node scripts/test-with-report.js",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test",
    "test:integration:airtable": "jest --testPathPatterns=configuration-airtable.integration.test.ts",
    "test:integration:imap": "jest utils/connecteur-email-imap.integration.test.ts",
    "test:bdd": "npm run build && npx bddgen && npx playwright test",
    "test:bdd:ui": "npx bddgen && npx playwright test --ui",
    "cli:test-connexion": "node dist/scripts/test-connexion-cli.js",
    "cli:auth-microsoft": "node dist/scripts/auth-device-code.js",
    "cli:configuration-airtable": "node dist/scripts/configuration-airtable-cli.js",
    "cli:releve-offres": "npm run build && node dist/scripts/releve-offres-linkedin-cli.js",
    "cli:enrichissement-background": "npm run build && node dist/scripts/enrichissement-background-cli.js",
    "cli:audit-sources": "npm run build && node dist/scripts/audit-sources-cli.js",
    "cli:tableau-synthese": "tsx scripts/tableau-synthese-cli.ts",
    "cli:import-liste-html-apec": "npm run build && node dist/scripts/import-liste-html-apec-cli.js",
    "import:offres-airtable-vers-sqlite": "npm run build && node dist/scripts/import-offres-airtable-vers-sqlite.js",
    "cli:sqlite-offres": "tsx scripts/sqlite-offres-cli.ts",
    "poc:enrichissement": "npm run build && node dist/scripts/poc-enrichissement-cli.js",
    "fixtures:linkedin:promote": "node dist/scripts/promote-linkedin-fixtures.js",
    "cli:bump-version": "npm run build && node dist/scripts/bump-version-cli.js"
  },
  "dependencies": {
    "@azure/msal-node": "^5.0.4",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.3.9",
    "imapflow": "^1.2.0",
    "isomorphic-fetch": "^3.0.0",
    "linkedom": "^0.18.12",
    "mathjs": "^15.1.1",
    "playwright": "^1.49.0",
    "puppeteer": "^24.37.5",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "jest": "^30.2.0",
    "playwright-bdd": "^8.4.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "fr.jobjoy.app",
    "productName": "Job-Joy",
    "artifactName": "Job-Joy-Setup.${ext}",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": ""
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlainMeunierFr/job-joy.git"
  }
}
